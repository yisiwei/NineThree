<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line2" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:padding="10dp"
        android:singleLine="true"
        android:text="缤纷盛夏-优惠不停，免费坐过山车"
        android:textColor="@color/color_32"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="促销类型：产品"
                android:textColor="@color/color_orange"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="发布中"
                android:textColor="@color/color_32"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="赠品名称：过山车"
            android:textColor="@color/color_64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="发行数量：100"
            android:textColor="@color/color_64"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/use_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="使用/领取：0/7"
            android:textColor="@color/color_main"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:gravity="right">

        <Button
            android:id="@+id/query"
            android:textColor="@color/color_main"
            android:background="@drawable/round_border_main"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="查看" />

        <Button
            android:id="@+id/edit"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_main"
            android:background="@drawable/round_border_main"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="编辑" />

        <Button
            android:id="@+id/close"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_main"
            android:background="@drawable/round_border_main"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="关闭" />

        <Button
            android:id="@+id/preview"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_main"
            android:background="@drawable/round_border_main"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="分享" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line2" />

</LinearLayout>